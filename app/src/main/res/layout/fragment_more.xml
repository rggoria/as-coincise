<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.MoreFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Personal Information"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMoreLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_1"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Log in"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnMoreSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_1"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Sign up"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnMoreAccountActiveEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_1"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Email: Processing..."
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:icon="@drawable/ic_person" />

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_1"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Update Password"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnMoreLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_1"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Logout"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="About Us"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMoreAboutUs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_1"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="View Developers"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:icon="@drawable/ic_programmer" />

        <Button
            android:id="@+id/btnMoreFeedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_1"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Send Feedback"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:icon="@drawable/ic_email" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Tools"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMoreCalculator"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_1"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Calculator"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:icon="@drawable/ic_calculate" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/color_1"
                    android:src="@drawable/ic_notifications_white" />

                <Switch
                    android:id="@+id/swMoreNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:text="News Notification"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/color_1"
            android:visibility="visible"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/color_1"
                    android:src="@drawable/ic_terminal"
                    android:tint="@color/white" />

                <Switch
                    android:id="@+id/swMoreSimulation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:text="Simulation"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
