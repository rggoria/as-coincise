<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/etCalculatorInformationHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Add Token Information"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <com.zues.searchable_spinner.SearchableSpinner
            android:id="@+id/ssCalculatorSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/border"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:label_color="@color/black"
            app:label_hint="Select Token"
            app:showSearch="true"
            app:sort="true" />

        <EditText
            android:id="@+id/etCalculatorAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/border"
            android:fontFamily="@font/nunito_sans_bold"
            android:hint="Enter Amount"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>